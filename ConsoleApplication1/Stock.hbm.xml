<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Program.Stock, Program" table="stock">
    <id name="Id" column="LogonId"
    type="String" length="20">
      <generator class="assigned" />
    </id>
    <property name="StockName" column="Name"
    type="String" length="40"/>
    <property name="StockActualPrice" column="Price" type="string"
    length="20"/>
    <property name="StockBuyTime" column="Date" type="DateTime"/>
  </class>
</hibernate-mapping>